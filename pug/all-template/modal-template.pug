mixin modal-template(num, topicModal, textModal, visibility)
  if(visibility)
    .modal.element-show.show(data-element=num)
      .modal__container 
        .close-btn.close-js
        .main-full
          if topicModal
            h2= topicModal
          if textModal
            .modal__greetings
              = textModal
        if block
          block
  else
    .modal.element-show(data-element=num)
      .modal__container 
        .close-btn.close-js
        .main-full
          if topicModal
            h2= topicModal
          if textModal
            .modal__greetings
              = textModal
        if block
          block